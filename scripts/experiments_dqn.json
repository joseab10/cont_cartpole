{
	"global_params": {
		"model_dir": "../save/models",
		"plt_dir"  : "../save/plots",
		"data_dir" : "../save/stats",

		"show": false
	},

	"experiments": [
		{
			"desc": "Discrete DQN agent w/ {2Act}",
			"file_name": "exp_dqn_2a",
			"exe": true,

			"params": {
				"runs": 5,
				"episodes": 3000,
				"time_steps": 500,

				"test_episodes": 10,

				"state_dim": 4,
				"action_dim": 2,

				"initial_state": "none",
				"initial_noise": "none",

				"agent": {
					"class": "dqn",
					"args" : {

						"action_fun": "disc2",

						"q": {
							"class": "mlp",
							"args" : {
								"non_linearity": "relu",
								"hidden_layers": 1,
								"hidden_dim"   : 20
							}
						},

						"q_target": {
							"class": "mlp",
							"args" : {
								"non_linearity": "relu",
								"hidden_layers": 1,
								"hidden_dim"   : 20
							}
						},

						"policy": {
							"class": "egreedy",
							"args" : {
								"epsilon"        : 0.20
							}
						},

						"gamma": 0.99,

						"doubleQ": true,

						"batch_size" : 64
					}
				}
			}
		},

