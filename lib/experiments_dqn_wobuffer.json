{
	"global_params": {
		"model_dir": "../save/models",
		"plt_dir"  : "../save/plots",
		"data_dir" : "../save/stats",

		"show": false
	},

	"experiments": [
		{
			"desc": "Discrete DQN agent w/ {2Act} wo/ {ReplayBuffer}",
			"file_name": "exp_dqn_2a_",
			"exe": true,

			"params": {
				"runs": 5,
				"episodes": 5000,
				"time_steps": 300,

				"test_episodes": 10,

				"state_dim": 4,
				"action_dim": 2,

				"initial_state": "none",
				"initial_noise": "none",

				"reward_function": {"class":  "pos_sparse"},

				"agent": {
					"class": "dqn",
					"args" : {

						"action_fun": "disc2",

						"q": {
							"class": "mlp",
							"args" : {
								"non_linearity": "relu",
								"hidden_layers": 1,
								"hidden_dim"   : 20
							}
						},

						"q_target": {
							"class": "mlp",
							"args" : {
								"non_linearity": "relu",
								"hidden_layers": 1,
								"hidden_dim"   : 20
							}
						},

						"policy": {
							"class": "egreedy",
							"args" : {
								"schedule": {
									"class": "schedule",
									"args" : {
										"x0" : 100,
										"x1" : 1200,
										"y0" : 0.9,
										"y1" : 0.2,
										"schedule_function": "exp",
										"cosine_annealing": false,
										"annealing_cycles": 5
									}
								}
							}
						},

						"gamma": 0.99,

						"doubleQ": false,

						"replay_buffer" : false,
						"max_buffer_size": 1,
						"batch_size" : 1
					}
				}
			}
		}
	]
}